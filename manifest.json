{
	"name": "Productivity Timer",
	"version": "1.2",
	"manifest_version": 2,
	"description": "Keeps track of your browsing time",
	"permissions": ["activeTab","declarativeContent", "storage", "tabs"],

	"browser_action": {
		"default_icon": "icon.png"
	},

	"content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js", "scripts/checkicon.js"],
        "run_at": "document_end"
      }
	],

	
	"background" : {
    	"scripts" : ["scripts/popup.js", "scripts/interval.js", "scripts/timer.js"]
  	}

}